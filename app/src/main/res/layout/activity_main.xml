<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_marginTop="20sp"
            android:layout_width="120dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/bank"
            android:layout_height="120dp"
            android:src="@drawable/bank1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank"
            android:text="@string/banking_app"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="33sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="10sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/usersImg"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginEnd="20sp"
            android:src="@drawable/alluser" />

        <TextView
            android:id="@+id/userTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usersImg"
            android:layout_marginStart="30sp"
            android:text="@string/all_users"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:src="@drawable/history1"
            android:id="@+id/historyUsr"
            android:layout_toEndOf="@+id/usersImg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/historyUsr"
            android:layout_marginStart="80sp"

            android:layout_toEndOf="@+id/userTxt"
            android:text="@string/update"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>



</RelativeLayout>